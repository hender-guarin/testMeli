<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardDetalle"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity= "center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/borde_cuadrado"
            >


            <TextView
                android:id="@+id/tv_nombre"
                android:background="@color/azul_oscuro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/Nombre"
                android:padding="5dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
              />



            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/borde_imagen"
                >

                <ImageView
                    android:id="@+id/img_producto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:contentDescription=" "
                    tools:ignore="HardcodedText" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:weightSum="12"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="7"
                            android:text="@string/precio"
                            android:textColor="@color/gris_letra"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights" />



                        <TextView
                            android:id="@+id/tv_precio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="5"
                            android:text="@string/vacio"
                            android:textColor="@color/gris_letra"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/azul_oscuro"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:weightSum="12"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="7"
                            android:text="@string/unidades_disponibles"
                            android:textColor="@color/gris_letra"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights" />

                        <TextView

                            android:id="@+id/tv_unidades_disp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="5"
                            android:text="@string/vacio"
                            android:textColor="@color/gris_letra"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/azul_oscuro"
                        android:layout_height="1dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>